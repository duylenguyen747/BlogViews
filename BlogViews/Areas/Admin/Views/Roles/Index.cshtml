@model IEnumerable<BlogViews.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
	<ol class="breadcrumb slim-breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản Lý Quyền Truy Cập</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Create" aria-current="page">Tạo Mới Quyền Truy Cập</a></li>
	</ol>
	<h6 class="slim-pagetitle">Quản Lý Quyền Truy Cập</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">

	<div class="table-responsive">
		<table class="table mg-b-0">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Description</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null && Model.Count() > 0)
				{
					foreach (var item in Model)
					{
						<tr>
							<th scope="row">@item.RoleId</th>
							<td>@item.RoleName</td>
							<td>@item.RoleDescription</td>
							<td>
								<a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId">View</a> |
								<a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
								<a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
							</td>
						</tr>

					}
				}

			</tbody>
		</table>
	</div><!-- table-responsive -->
</div><!-- section-wrapper -->

           