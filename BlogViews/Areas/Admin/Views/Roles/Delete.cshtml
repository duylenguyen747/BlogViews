@model BlogViews.Models.Role

@{
	ViewData["Title"] = "Xác Nhận Xóa Quyền Truy Cập";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="slim-pageheader">
	<ol class="breadcrumb slim-breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản Lý Quyền Truy Cập</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Create" aria-current="page">Tạo Mới Quyền Truy Cập</a></li>
	</ol>
	<h6 class="slim-pagetitle">Xác Nhận Xóa Quyền Truy Cập</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">
	<div class="form-layout form-layout-7">
		<div class="row no-gutters">
			<div class="col-5 col-sm-4">
				ID:
			</div><!-- col-4 -->
			<div class="col-7 col-sm-8">
				<input asp-for="RoleId" class="form-control" type="text">
			</div><!-- col-8 -->
		</div><!-- row -->
		<div class="row no-gutters">
			<div class="col-5 col-sm-4">
				ROLE NAME:
			</div><!-- col-4 -->
			<div class="col-7 col-sm-8">
				<input asp-for="RoleName" class="form-control" type="text">
			</div><!-- col-8 -->
		</div><!-- row -->
		<div class="row no-gutters">
			<div class="col-5 col-sm-4">
				DESCRIPTION:
			</div><!-- col-4 -->
			<div class="col-7 col-sm-8">
				<input asp-for="RoleDescription" class="form-control" type="text">
			</div><!-- col-8 -->
			@*<div class="form-layout-footer">
			<button class="btn btn-primary bd-0">Submit Form</button>
			<button class="btn btn-secondary bd-0">Cancel</button>
			</div>*@
			<div class="form-layout-footer col-12">
				<form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.RoleId">
					<input type="hidden" asp-for="RoleId" />
					<input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
					<button asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-primary bd-0">Cancel</button>
				</form>
			</div>
		</div><!-- row -->
	</div><!-- form-layout -->
</div><!-- section-wrapper -->
